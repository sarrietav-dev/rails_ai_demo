<% content_for :title, "Chats" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Your Chats</h1>
    <%= link_to new_chat_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="mr-2 -ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Chat
    <% end %>
  </div>

  <div id="chats" class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <% @chats.each do |chat| %>
      <%= link_to chat, class: "block" do %>
        <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow duration-200">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                <%= chat.model&.name || 'Default' %>
              </span>
              <span class="text-sm text-gray-500">
                <%= chat.messages.count %> messages
              </span>
            </div>

            <% first_message = chat.messages.where(role: 'user').first %>
            <% if first_message %>
              <p class="text-sm text-gray-700 line-clamp-2 mb-3">
                <%= truncate(first_message.content, length: 100) %>
              </p>
            <% else %>
              <p class="text-sm text-gray-500 italic mb-3">No messages yet</p>
            <% end %>

            <div class="text-xs text-gray-500">
              <%= time_ago_in_words(chat.created_at) %> ago
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @chats.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No chats yet</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new chat.</p>
      <div class="mt-6">
        <%= link_to "New Chat", new_chat_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>